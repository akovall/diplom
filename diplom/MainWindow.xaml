<Window x:Class="diplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:vm="clr-namespace:diplom.viewmodels"
        xmlns:views="clr-namespace:diplom.views"
        
        Title="{DynamicResource AppTitle}" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen" Background="{DynamicResource PrimaryBackground}"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" CornerRadius="12" GlassFrameThickness="0" 
                      ResizeBorderThickness="6" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TasksViewModel}">
            <views:TasksView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProjectsViewModel}">
            <views:ProjectsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:TimeTrackerViewModel}">
            <views:TimeTrackerView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

    </Window.Resources>

    <Border Background="{DynamicResource PrimaryBackground}" CornerRadius="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="{DynamicResource SidebarBackground}" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="{DynamicResource BrandName}" FontWeight="Bold" FontSize="13"
                               Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="MinimizeButton" Content="—" Width="46" Height="40" 
                                BorderThickness="0" Background="Transparent" Foreground="{DynamicResource SecondaryText}"
                                Click="MinimizeButton_Click" FontSize="14" Cursor="Hand"/>
                        <Button x:Name="MaximizeButton" Content="☐" Width="46" Height="40" 
                                BorderThickness="0" Background="Transparent" Foreground="{DynamicResource SecondaryText}"
                                Click="MaximizeButton_Click" FontSize="12" Cursor="Hand"/>
                        <Button x:Name="CloseButton" Content="✕" Width="46" Height="40" 
                                BorderThickness="0" Background="Transparent" Foreground="{DynamicResource SecondaryText}"
                                Click="CloseButton_Click" FontSize="12" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E53935"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{DynamicResource SidebarBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0.3,0"
                        CornerRadius="0,0,0,12">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{DynamicResource BrandName}" Foreground="{DynamicResource PrimaryText}" FontSize="20" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,30,0,40"/>

                        <StackPanel Grid.Row="1">
                            <RadioButton Content="{DynamicResource MenuDashboard}" Style="{StaticResource MenuButtonStyle}" 
                                         IsChecked="True"
                                         Command="{Binding NavigateCommand}" CommandParameter="Dashboard"/>

                            <RadioButton Content="{DynamicResource MenuTasks}" Style="{StaticResource MenuButtonStyle}"
                                         Command="{Binding NavigateCommand}" CommandParameter="Tasks"/>

                            <RadioButton Content="{DynamicResource MenuProjects}" Style="{StaticResource MenuButtonStyle}"
                                         Command="{Binding NavigateCommand}" CommandParameter="Projects"/>

                            <RadioButton Content="{DynamicResource MenuTimeTracker}" Style="{StaticResource MenuButtonStyle}"
                                         Command="{Binding NavigateCommand}" CommandParameter="TimeTracker"/>

                            <RadioButton Content="{DynamicResource MenuSettings}" Style="{StaticResource MenuButtonStyle}" Margin="0,20,0,0"
                                         Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Background="{DynamicResource PrimaryBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" >
                        <Grid Margin="20,0">
                            <TextBlock Text="{Binding CurrentPageTitle}" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <StackPanel VerticalAlignment="Center" Margin="0,0,12,0" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding CurrentUserName}" 
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource PrimaryText}" FontSize="13" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding CurrentUserRole}" 
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource MutedText}" FontSize="11"/>
                                </StackPanel>
                                <Border Width="35" Height="35" CornerRadius="17" Background="{DynamicResource AccentColor}">
                                    <TextBlock Text="{Binding UserInitials}" Foreground="White" FontSize="13" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="20"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>