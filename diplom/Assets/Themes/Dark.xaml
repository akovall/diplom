<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#0E121B"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="#131720"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#141821"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="#0E121B"/>

    <!-- Text colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#A0AEC0"/>
    <SolidColorBrush x:Key="MutedText" Color="#718096"/>

    <!-- Accent colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#2BD4BD"/>
    <SolidColorBrush x:Key="AccentBackground" Color="#173631"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#1F232E"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#2F333E"/>

    <!-- Other elements -->
    <SolidColorBrush x:Key="AvatarBrush" Color="#43464A"/>

</ResourceDictionary>