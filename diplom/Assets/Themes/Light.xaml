<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main backgrounds -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#F0F2F5"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="#F8FAFC"/>

    <!-- Text colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#1A202C"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#4A5568"/>
    <SolidColorBrush x:Key="MutedText" Color="#718096"/>

    <!-- Accent colors -->
    <SolidColorBrush x:Key="AccentColor" Color="#14B8A6"/>
    <SolidColorBrush x:Key="AccentBackground" Color="#D1FAE5"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#CBD5E0"/>

    <!-- Other elements -->
    <SolidColorBrush x:Key="AvatarBrush" Color="#CBD5E1"/>

</ResourceDictionary>