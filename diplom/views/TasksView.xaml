<UserControl x:Class="diplom.views.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:diplom.viewmodels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <UserControl.Resources>
        <vm:StringIsNullOrEmptyConverter x:Key="StringIsNullOrEmptyConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="Auto"/>
          
            <RowDefinition Height="*"/>
           
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="300" Height="40" CornerRadius="8" 
                    Background="{DynamicResource SurfaceBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryText}"/>

                    <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"
                             Foreground="{DynamicResource PrimaryText}" FontSize="14"
                             Grid.Column="1">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Text="Search tasks..." IsHitTestVisible="False"
                               Grid.Column="1" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryText}" Opacity="0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchQuery, Converter={StaticResource StringIsNullOrEmptyConverter}}" Value="False">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <Button Grid.Column="2" Command="{Binding CreateTaskCommand}"
                    Height="40" Padding="20,0"
                    Background="{DynamicResource AccentColor}" 
                    Foreground="White" FontWeight="SemiBold"
                    BorderThickness="0" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="+" Margin="0,0,8,0" FontSize="16" Height="25"/>
                    <TextBlock Text="New Task" Height="16"/>
                </StackPanel>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,15">
            <RadioButton Content="All" IsChecked="True" GroupName="StatusFilter" Style="{StaticResource MenuButtonStyle}" Height="30" FontSize="12" Margin="0,0,5,0"/>
            <RadioButton Content="To Do" GroupName="StatusFilter" Style="{StaticResource MenuButtonStyle}" Height="30" FontSize="12" Margin="5,0"/>
            <RadioButton Content="In Progress" GroupName="StatusFilter" Style="{StaticResource MenuButtonStyle}" Height="30" FontSize="12" Margin="5,0"/>
            <RadioButton Content="Done" GroupName="StatusFilter" Style="{StaticResource MenuButtonStyle}" Height="30" FontSize="12" Margin="5,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
            <ItemsControl ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,5,10" Padding="0" CornerRadius="8" Background="{DynamicResource SurfaceBrush}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#14B8A6" Opacity="0.2" BlurRadius="10"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" CornerRadius="8,0,0,8" Width="6" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Gray"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Priority}" Value="1">
                                                    <Setter Property="Background" Value="#F6E05E"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="2">
                                                    <Setter Property="Background" Value="#F6AD55"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Priority}" Value="3">
                                                    <Setter Property="Background" Value="#FC8181"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Grid Grid.Column="1" Margin="15,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text=" #TASK-123" Foreground="{DynamicResource SecondaryText}" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0" Opacity="0.6"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               FontSize="13" Margin="0,5,0,10" 
                                               TextTrimming="CharacterEllipsis" MaxHeight="40"/>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Background="{DynamicResource PrimaryBackground}" CornerRadius="4" Padding="8,4" Margin="0,0,15,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⏱️" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding TimeSpentFormatted}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}"/>
                                            </StackPanel>
                                        </Border>

                                        <ComboBox SelectedItem="{Binding Status}" Width="130" Height="32">
                                            <sys:String>To Do</sys:String>
                                            <sys:String>In Progress</sys:String>
                                            <sys:String>Done</sys:String>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,20,0">
                                    <Button Command="{Binding ToggleTimerCommand}" Width="45" Height="45" 
                                            Background="Transparent" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"
                                            Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="25"/>
                                            </Style>
                                        </Button.Resources>
                                        <Grid>
                                            <Path Data="M0,0 L14,7 L0,14 z" Fill="#38A169" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>

                                            <Path Data="M0,0 L4,0 L4,14 L0,14 M8,0 L12,0 L12,14 L8,14 z" Fill="#E53E3E" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Grid>
                                    </Button>

                                    <TextBlock Text="Start" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="10" Foreground="{DynamicResource SecondaryText}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Text" Value="Stop"/>
                                                        <Setter Property="Foreground" Value="#E53E3E"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>