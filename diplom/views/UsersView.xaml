<UserControl x:Class="diplom.views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource MenuUsers}" FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="12" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="10">
            <ListBox ItemsSource="{Binding Users}" Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="40" Height="40" CornerRadius="20" Background="{DynamicResource AccentColor}" Margin="0,0,15,0">
                                <TextBlock Text="{Binding FullName, Converter={StaticResource UserInitialsConverter}}" 
                                           Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding FullName}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold"/>
                                <TextBlock Text="Deactivated" Foreground="{DynamicResource SecondaryText}" FontSize="11" Margin="0,2,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding Username}" Foreground="{DynamicResource MutedText}" FontSize="12"/>
                                    <TextBlock Text=" â€¢ " Foreground="{DynamicResource MutedText}" FontSize="12"/>
                                    <TextBlock Text="{Binding JobTitle}" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Analytics (Admin/Manager) -->
                                <Button Width="28" Height="28"
                                        Background="Transparent" BorderThickness="0"
                                        VerticalAlignment="Center" Margin="0,0,6,0" Cursor="Hand"
                                        Click="AnalyticsButton_Click"
                                        ToolTip="Analytics">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.CanViewAnalytics, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock Text="ðŸ“Š" FontSize="14"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>

                                <!-- Role Selection Dropdown -->
                                <ComboBox ItemsSource="{Binding DataContext.AvailableRoles, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          SelectedItem="{Binding Role, Mode=TwoWay}"
                                          SelectionChanged="Role_SelectionChanged"
                                          Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,10,0" Cursor="Hand">
                                    <ComboBox.Template>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <Border Background="{DynamicResource BorderBrush}" CornerRadius="4" Padding="8,4">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Role}" Foreground="{DynamicResource PrimaryText}" FontSize="11" FontWeight="SemiBold"/>
                                                        <TextBlock Text=" â–¾" Foreground="{DynamicResource MutedText}" FontSize="9" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                                <ToggleButton x:Name="ToggleButton" Background="Transparent" BorderThickness="0" 
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                              ClickMode="Press"/>
                                                <Popup x:Name="PART_Popup" AllowsTransparency="True" IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}" Placement="Bottom">
                                                    <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4" MinWidth="100">
                                                        <ItemsPresenter/>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </ComboBox.Template>
                                </ComboBox>

                                <!-- 3-state status indicator (not clickable) -->
                                <Ellipse Width="10" Height="10" Margin="5">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ActivityState}" Value="Offline">
                                                    <Setter Property="Fill" Value="#E53E3E"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ActivityState}" Value="OnlineIdle">
                                                    <Setter Property="Fill" Value="#F6AD55"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ActivityState}" Value="OnlineActive">
                                                    <Setter Property="Fill" Value="#48BB78"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <!-- Options Menu (3 dots) -->
                                <Button Width="28" Height="28"
                                        Background="Transparent" BorderThickness="0"
                                        VerticalAlignment="Center" Margin="6,0,0,0" Cursor="Hand"
                                        Click="OptionsButton_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="14"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock Text="â‹®" FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource SecondaryText}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <Button.ContextMenu>
                                        <ContextMenu Background="{DynamicResource SurfaceBrush}"
                                                     BorderBrush="{DynamicResource BorderBrush}"
                                                     Padding="0">
                                            <ContextMenu.Resources>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Padding" Value="12,8"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                </Style>
                                            </ContextMenu.Resources>
                                            <MenuItem Header="{DynamicResource MenuDeactivateAccount}"
                                                      Click="DeactivateAccount_Click"
                                                      Foreground="#E53E3E">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                            <MenuItem Header="{DynamicResource MenuActivateAccount}"
                                                      Click="ActivateAccount_Click"
                                                      Foreground="{DynamicResource PrimaryText}">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <ProgressBar Grid.Row="1" IsIndeterminate="True" Width="200" Height="4" 
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                     VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0"/>
    </Grid>
</UserControl>
