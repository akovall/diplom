<Window x:Class="diplom.views.TaskDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource MenuDetails}"
        Height="520" Width="520"
        MinHeight="420" MinWidth="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="36" CornerRadius="12" GlassFrameThickness="0"
                      ResizeBorderThickness="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource PrimaryBackground}" CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource SidebarBackground}" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="{DynamicResource MenuDetails}" FontWeight="SemiBold" FontSize="13"
                               Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"
                               Margin="16,0,0,0"/>

                    <Button Content="âœ•" Width="36" Height="36"
                            HorizontalAlignment="Right"
                            BorderThickness="0" Background="Transparent" Foreground="{DynamicResource SecondaryText}"
                            Click="CloseButton_Click" FontSize="11" Cursor="Hand"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E53935"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="24,16,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryText}"
                                   FontWeight="Bold" FontSize="20" TextWrapping="Wrap"/>

                        <TextBlock Text="{Binding Description}" Foreground="{DynamicResource SecondaryText}"
                                   FontSize="13" Margin="0,10,0,0" TextWrapping="Wrap"/>

                        <Border Height="1" Background="{DynamicResource BorderBrush}" Margin="0,18,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{DynamicResource TaskProjectLabel}" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                <TextBlock Text="{Binding ProjectName}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Assignee" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                <TextBlock Text="{Binding AssigneeName}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{DynamicResource TaskStatusLabel}" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                <TextBlock Text="{Binding Status}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="{DynamicResource TaskPriorityLabel}" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                <TextBlock Text="{Binding PriorityText}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{DynamicResource TaskDeadlineLabel}" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                <TextBlock Text="{Binding DeadlineText}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Time Spent" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                <TextBlock Text="{Binding TimeSpentFormatted}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="1" Content="{DynamicResource CancelButton}"
                        Click="CloseButton_Click"
                        Height="44" Margin="0,20,0,0"
                        Background="{DynamicResource AccentColor}"
                        Foreground="White" FontWeight="SemiBold"
                        BorderThickness="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
