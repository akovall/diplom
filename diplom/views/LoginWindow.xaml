<Window x:Class="diplom.views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TimeFlow — Login"
        MinWidth="380" MinHeight="460"
        SizeToContent="Height" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="6" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource PrimaryBackground}" CornerRadius="16"
            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Drag handle + Close button -->
            <Grid Grid.Row="0" Height="36" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                  Background="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Content="✕" Width="36" Height="36"
                        HorizontalAlignment="Right"
                        BorderThickness="0" Background="Transparent"
                        Foreground="{DynamicResource SecondaryText}"
                        Click="CloseButton_Click" FontSize="11" Cursor="Hand"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E53935"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="0,16,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Form -->
            <StackPanel Grid.Row="1" Margin="32,0,32,0" VerticalAlignment="Center">
                <!-- Logo -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,28">
                    <TextBlock Text="WORKFLOW" FontSize="28" FontWeight="Bold"
                               Foreground="{DynamicResource AccentColor}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="TimeFlow" FontSize="13"
                               Foreground="{DynamicResource SecondaryText}"
                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Username -->
                <TextBlock Text="Username" FontSize="12" Margin="0,0,0,6"
                           Foreground="{DynamicResource SecondaryText}"/>
                <TextBox x:Name="UsernameBox" Height="36" FontSize="14"
                         Padding="8,6" Margin="0,0,0,16"
                         Background="{DynamicResource SurfaceBrush}"
                         Foreground="{DynamicResource PrimaryText}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         BorderThickness="1"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="12" Margin="0,0,0,6"
                           Foreground="{DynamicResource SecondaryText}"/>
                <PasswordBox x:Name="PasswordBox" Height="36" FontSize="14"
                             Padding="8,6" Margin="0,0,0,16"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource PrimaryText}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                <!-- Register fields (collapsed by default) -->
                <StackPanel x:Name="RegisterFields" Visibility="Collapsed">
                    <TextBlock Text="Full Name" FontSize="12" Margin="0,0,0,6"
                               Foreground="{DynamicResource SecondaryText}"/>
                    <TextBox x:Name="FullNameBox" Height="36" FontSize="14"
                             Padding="8,6" Margin="0,0,0,16"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource PrimaryText}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>

                    <TextBlock Text="Job Title" FontSize="12" Margin="0,0,0,6"
                               Foreground="{DynamicResource SecondaryText}"/>
                    <TextBox x:Name="JobTitleBox" Height="36" FontSize="14"
                             Padding="8,6" Margin="0,0,0,16"
                             Background="{DynamicResource SurfaceBrush}"
                             Foreground="{DynamicResource PrimaryText}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- Error -->
                <TextBlock x:Name="ErrorText" Text="" FontSize="12"
                           Foreground="#FF6B6B" Margin="0,0,0,12"
                           TextWrapping="Wrap" Visibility="Collapsed"/>

                <!-- Login button -->
                <Button x:Name="LoginButton" Content="Login" Height="40"
                        FontSize="14" FontWeight="SemiBold" Cursor="Hand"
                        Click="LoginButton_Click"
                        Background="{DynamicResource AccentColor}"
                        Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8" Padding="16,8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Toggle login/register -->
            <StackPanel Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,16,0,24">
                <TextBlock x:Name="ToggleText" Text="Don't have an account?"
                           FontSize="12" Foreground="{DynamicResource MutedText}"
                           VerticalAlignment="Center"/>
                <Button x:Name="ToggleButton" Content="Register"
                        FontSize="12" Cursor="Hand" Margin="6,0,0,0"
                        Click="ToggleButton_Click"
                        Foreground="{DynamicResource AccentColor}"
                        Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
