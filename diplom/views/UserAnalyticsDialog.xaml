<Window x:Class="diplom.views.UserAnalyticsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="User Analytics"
        Height="760" Width="1120"
        MinHeight="660" MinWidth="980"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBackground}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryText}"
                           FontSize="22" FontWeight="Bold"/>
                <TextBlock Text="{Binding RangeText}" Foreground="{DynamicResource SecondaryText}"
                           FontSize="12" Margin="0,6,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                <ComboBox Width="140" Height="34" Margin="0,0,10,0"
                          ItemsSource="{Binding PeriodOptions}"
                          SelectedItem="{Binding SelectedPeriod, Mode=TwoWay}"/>
                <Button Content="Застосувати" Command="{Binding ApplyPeriodCommand}" Margin="0,0,8,0"/>
                <Button Content="Оновити" Command="{Binding ReloadCommand}" Margin="0,0,8,0"/>
                <Button Content="Експорт Excel" Command="{Binding ExportExcelCommand}"/>
            </StackPanel>
        </Grid>

        <ProgressBar Grid.Row="1" Height="3" Margin="0,0,0,14" IsIndeterminate="True"
                     Foreground="{DynamicResource AccentColor}"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,12">
                    <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="14" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Відпрацьовано" Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                            <TextBlock Text="{Binding KpiWorkedHours}" Foreground="{DynamicResource PrimaryText}" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="14" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Виконано" Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                            <TextBlock Text="{Binding KpiCompleted}" Foreground="{DynamicResource PrimaryText}" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="14" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Прострочено" Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                            <TextBlock Text="{Binding KpiOverdue}" Foreground="#E53E3E" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="14">
                        <StackPanel>
                            <TextBlock Text="Рівень виконання" Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                            <TextBlock Text="{Binding KpiCompletionRate}" Foreground="{DynamicResource PrimaryText}" FontSize="22" FontWeight="Bold" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="12" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Навантаження та результат" Foreground="{DynamicResource PrimaryText}" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="   (масштаб: колесо миші, панорама: перетягування)" Foreground="{DynamicResource SecondaryText}" FontSize="11" VerticalAlignment="Bottom"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1" Margin="0,14,0,0"
                                            Series="{Binding Series}"
                                            XAxes="{Binding XAxes}"
                                            YAxes="{Binding YAxes}"
                                            LegendTextPaint="{Binding LegendTextPaint}"
                                            ZoomMode="{Binding ZoomMode}"
                                            LegendPosition="Top"
                                            DrawMarginFrame="{x:Null}"
                                            TooltipPosition="Top"
                                            AnimationsSpeed="0:0:0.35">
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="16"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Останні виконані задачі" Foreground="{DynamicResource PrimaryText}"
                               FontSize="16" FontWeight="SemiBold"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding RecentCompletedTasks}" Background="Transparent"
                             BorderThickness="0" Margin="0,12,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryText}" FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding CompletedAtText}" Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                                            <TextBlock Text="  " FontSize="11"/>
                                            <TextBlock Text="{Binding OverdueText}" Foreground="#E53E3E" FontSize="11"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding EstimatedHours, StringFormat=Оцінка: {0:0.##} год}" Foreground="{DynamicResource PrimaryText}" FontSize="11" Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding ActualHours, StringFormat=Факт: {0:0.##} год}" Foreground="{DynamicResource PrimaryText}" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
