<UserControl x:Class="diplom.views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,20">

            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Margin="0,0,10,0" Padding="20"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{DynamicResource WorkedToday}" Foreground="{DynamicResource SecondaryText}" FontSize="14"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="{Binding WorkedToday}" Foreground="{DynamicResource PrimaryText}" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="/ 8h" Foreground="{DynamicResource SecondaryText}" FontSize="16" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                    </StackPanel>
                    <ProgressBar Value="{Binding WorkedTodayProgress}" Height="6" Margin="0,15,0,0" Foreground="{DynamicResource AccentColor}" Background="{DynamicResource BorderBrush}" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Margin="10,0,10,0" Padding="20"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{DynamicResource TasksPlan}" Foreground="{DynamicResource SecondaryText}" FontSize="14"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="{Binding TasksDone}" Foreground="{DynamicResource PrimaryText}" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="{DynamicResource Done}" Foreground="{DynamicResource SecondaryText}" FontSize="16" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TasksInProgress, StringFormat=In Progress: {0}}" Foreground="{DynamicResource AccentColor}" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Margin="10,0,0,0" Padding="20"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Productivity}" Foreground="{DynamicResource SecondaryText}" FontSize="14"/>
                    <TextBlock Text="{Binding ProductivityText}" Foreground="{Binding ProductivityForeground}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding ProductivityDeltaText}" Foreground="{DynamicResource SecondaryText}" FontSize="12" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding ProductivityHintText}" Foreground="{DynamicResource SecondaryText}" FontSize="12" Margin="0,6,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Border Grid.Row="1" Background="{DynamicResource AccentColor}" CornerRadius="12" Padding="25" Margin="0,0,0,20">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource CurrentActivity}" Foreground="White" Opacity="0.8" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentActivityTitle}" Foreground="White" FontSize="26" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding CurrentActivityProject}" Foreground="White" Opacity="0.9" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentActivityTimer}" Foreground="White" FontSize="42" FontFamily="Consolas" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <Button Width="50" Height="50" Background="White" BorderThickness="0" Cursor="Hand"
                            Command="{Binding StopActiveTimerCommand}"
                            IsEnabled="{Binding HasActiveSession}">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                        <Path Data="M0,0 L12,0 L12,12 L0,12 z" Fill="{DynamicResource AccentColor}" Stretch="Uniform" Width="14" Height="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Margin="0,0,10,0" Padding="20"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <TextBlock Text="{DynamicResource WeeklyActivity}" Foreground="{DynamicResource PrimaryText}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Top"/>

                    <UniformGrid Columns="7" VerticalAlignment="Bottom" Height="150" Margin="10,40,10,0">
                        <Border Width="20" Height="80" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}" CornerRadius="4"/>
                        <Border Width="20" Height="120" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}" CornerRadius="4"/>
                        <Border Width="20" Height="100" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}" CornerRadius="4"/>
                        <Border Width="20" Height="140" VerticalAlignment="Bottom" Background="{DynamicResource AccentColor}" CornerRadius="4"/>
                        <Border Width="20" Height="60" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}" CornerRadius="4"/>
                        <Border Width="20" Height="0" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}" CornerRadius="4"/>
                        <Border Width="20" Height="0" VerticalAlignment="Bottom" Background="{DynamicResource BorderBrush}" CornerRadius="4"/>
                    </UniformGrid>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Margin="10,0,0,0" Padding="20"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Urgent}" Foreground="{DynamicResource PrimaryText}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <ItemsControl ItemsSource="{Binding UrgentTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#FC8181" CornerRadius="2"/>
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryText}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding DeadlineText}" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
